{{page-title this.country.name}}

<main class="grid__item grid__item__main flex flex__justify {{if this.dijkstra "between" "center"}}" style="width:100%;">
  <section>
    <h1> Welcome to {{this.country.name}}</h1>

    <h4>What's your journey?:</h4>

    <Form @id="select-path">
        <PowerSelect
            @matchTriggerWidth = {{false}}
            @options={{this.cities}}
            @selected={{this.cityStart}}
            @onChange={{fn (mut this.cityStart)}} as |city|>
                {{city.name}}
        </PowerSelect>
        <div class="u-margin-top-s"></div>
        <PowerSelect
            @matchTriggerWidth = {{false}}
            @options={{this.remainingCities}}
            @selected={{this.cityEnd}}
            @onChange={{fn (mut this.cityEnd)}} as |city|>
                {{city.name}}
        </PowerSelect>
        <Button @action_name="Search" @id="select-path" {{on "click" this.onSearch}} type="button" />
    </Form>


    {{outlet}}
  </section>

  {{#if this.dijkstra}}
  <aside>
    <ImgMap @dijkstra={{this.dijkstra}}/>
  </aside>
  {{/if}}
</main>

